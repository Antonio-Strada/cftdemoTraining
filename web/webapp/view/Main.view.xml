<mvc:View
    controllerName="com.xtendhr.web.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:t="sap.ui.table"
    displayBlock="true"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <Panel
                id="idPanel"
                headerText="Shirt Details"
                class="sapUIResponsiveMargin"
                expandable="true" expanded="true"
            >
                <Button
                    id="createButton"
                    text="Create new"
                    type="Emphasized"
                    press="onCreatePress"
                    icon="sap-icon://add"
                />
                <t:Table
                    rows="{odata>/d/results}"
                    selectionMode="Single"
                    ariaLabelledBy="title"
                    id="MDFList"
                    class="sapUiResponsiveMargin"
                    alternateRowColors="true"
                    width="auto"
                >
                    <t:columns>
                        <t:Column
                            width="11rem"
                            id="idColumCode"
                            sortProperty="externalCode"
                        >
                            <Label
                                text="External Code"
                                id="idLableCode"
                            />
                            <t:template>
                                <Text
                                    text="{odata>externalCode}"
                                    wrapping="false"
                                    id="idTextCode"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column
                            width="11rem"
                            id="idColumSize"
                        >
                            <Label
                                text="Shirt Size"
                                id="idLableSize"
                            />
                            <t:template>
                                <Text
                                    text="{odata>cust_ShirtSize}"
                                    id="idTextSize"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column
                            width="11rem"
                            hAlign="End"
                            id="idColumColor"
                        >
                            <Label
                                text="Shirt Color"
                                id="idLableColor"
                            />
                            <t:template>
                                <Text
                                    text="{odata>cust_ShirtColor}"
                                    id="idTextColor"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column
                            width="11rem"
                            hAlign="End"
                            id="idColumnEmployee"
                        >
                            <Label
                                text="Employee"
                                id="idLabelEmployee"
                            />
                            <t:template>
                                <Text
                                    text="{odata>cust_Employee}"
                                    id="idTextEmployee"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column
                            width="11rem"
                            hAlign="End"
                            id="idColumnBtn"
                        >
                            <Label
                                text="Detail"
                                id="IdBtnlbl"
                            />
                            <t:template>
                                <Button
                                    id="BtnDetail"
                                    press="onOpenDetailView"
                                    text="View"
                                    icon="sap-icon://bullet-hint"
                                    type="Emphasized"
                                />
                            </t:template>
                        </t:Column>
                    </t:columns>
                </t:Table>
            </Panel>
        </content>
    </Page>
</mvc:View>
